<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="top: 50px; width: 850px;">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/gato_home_carrosel.jpg" class="d-block w-100" alt="..." style="height: 400px; width: 1400px;" >
      </div>
      <div class="carousel-item">
      <img src="/images/cachorro_home_carrosel2.jpg" class="d-block w-100" alt="..." style="height: 400px; width: 1400px;">
      </div>
      <div class="carousel-item">
        <img src="/images/cachorro_home.jpg" class="d-block w-100" alt="..." style="height: 400px; width: 1400px;">
      </div>
      <div class="carousel-item">
