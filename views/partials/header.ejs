      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
  </div>
<div class="card-deck">

  <% cards.forEach(card => { %>
    <div class="col-8 col-md-3 col-lg-4 mt-3" style="width: 18rem;">
      <div class="card">
        <img src="<%= card.caminho_de_imagem %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= card.titulo %> </h5>
          <p class="card-text"><%= card.texto %> </p>
          <a href="#" class="btn btn-primary"><%= card.botao %> </a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
